<!doctype html><html><head><meta charset="utf-8"><title>Create Case</title><link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"></head><body class="p-4"><div class="container"><h1>Create Case</h1><form method="post" action="/cases"><div class="mb-3"><label>Client</label><select name="client_id" class="form-control"><% clients.forEach(function(c){ %><option value="<%= c.id %>"><%= c.client_name %></option><% }) %></select></div><div class="mb-3"><label>Invoice Number</label><input name="invoice_number" class="form-control" required></div><div class="mb-3"><label>Invoice Amount</label><input name="invoice_amount" class="form-control" required></div><div class="mb-3"><label>Invoice Date</label><input type="date" name="invoice_date" class="form-control" required></div><div class="mb-3"><label>Due Date</label><input type="date" name="due_date" class="form-control" required></div><div class="mb-3"><label>Status</label><select name="status" class="form-control"><option>New</option><option>In Follow-up</option><option>Partially Paid</option><option>Closed</option></select></div><div class="mb-3"><label>Last Follow-up Notes</label><textarea name="last_follow_up_notes" class="form-control"></textarea></div><button class="btn btn-primary">Create</button></form></div></body></html>